---
// Import statements for components or scripts
import Navbar from '../components/Navbar.astro';
import '../styles.css';
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects | KunjML</title>
  <link rel="stylesheet" href="/styles.css">
  <!-- Include Tailwind via CDN or your build process -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="dark:bg-gray-800 dark:text-white">
  <Navbar />
  <main class="container mx-auto px-4 sm:px-6 lg:px-8 mt-10">
    <h1 class="text-3xl font-bold mb-10 text-center">Projects</h1>
        <!-- Club Work Section -->
        <section class="mb-10">
          <h2 class="text-2xl font-semibold mb-6">Devil Data Science Club Work</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Project cards -->
            <div class="bg-white dark:bg-gray-700 p-4 rounded-lg shadow-lg border border-gray-300 border-solid">
              <img src="src/project-img/Asu-Search-Main.png" alt="" class="rounded-t-lg w-full">
              <h2 class="text-xl font-semibold mb-2">ASU Class Scraper</h2>
              <div class="mb-4">
                <p>.</p>
              </div>
              <div class="flex justify-between items-center">
                <a href="#link-to-code" class="text-blue-600 hover:underline">Code</a>
                <a href="#link-to-demo" class="text-blue-600 hover:underline">Live demo</a>
              </div>
            </div>
            
          </div>
        </section>
        <!-- Web Scraping -->
        <section class="mb-10">
          <h2 class="text-2xl font-semibold mb-6">Web Scraping</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Project cards -->
            <div class="bg-white dark:bg-gray-700 p-4 rounded-lg shadow-lg border border-gray-300 border-solid">
              <h2 class="text-xl font-semibold mb-2">ASU Class Scraper</h2>
              <div class="mb-4">
                <p>Description or other content goes here.</p>
              </div>
              <div class="flex justify-between items-center">
                <a href="#link-to-code" class="text-blue-600 hover:underline">Code</a>
                <a href="#link-to-demo" class="text-blue-600 hover:underline">Live demo</a>
              </div>
            </div>
          </div>
        </section>
      
      <!-- Repeat for other projects -->
    </div>
  </main>
</body>
</html>
